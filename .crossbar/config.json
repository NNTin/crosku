{
    "$schema": "https://raw.githubusercontent.com/crossbario/crossbar/master/crossbar.json",
    "version": 2,
    "controller": {
    },
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "public",
                            "permissions": [
                                {
                                    "uri": "*",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": true,
                                        "publisher": true
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ],
                    "store": {
                        "type": "memory",
                        "event-history": [
                            {
                            }
                        ]
                    }
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "interface": "0.0.0.0",
                        "type": "tcp",
                        "port": "$PORT"
                    },
                    "paths": {
                        "info": {
                            "type": "nodeinfo"
                        },
                        "ws": {
                            "type": "websocket",
                            "auth": {
                                "anonymous": {
                                    "type": "static",
                                    "role": "public"
                                }
                            },
                            "options": {
                                "auto_ping_interval": 10000,
                                "auto_ping_timeout": 15000,
                                "auto_ping_size": 4,
                                "open_handshake_timeout": 15000,
                                "close_handshake_timeout": 15000,
                                "auto_fragment_size": 65536,
                                "max_message_size": 1048576,
                                "max_frame_size": 1048576
                            }
                        }
                    }
                }
            ]
        }
    ]
}
